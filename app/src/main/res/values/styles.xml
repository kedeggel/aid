<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityActionBar" parent="AppTheme">

    </style>

    <style name="ActivityNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryLight</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Object">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Header" parent="Object">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Button" parent="Object">

    </style>

    <style name="Annotation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
